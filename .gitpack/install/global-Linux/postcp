#!/bin/sh

#-------------------------------------------------------------------------------
# Copyright 2019 Dominik Salvet
# github.com/dominiksalvet/asus-fan-control
#-------------------------------------------------------------------------------

# remove possible leftover of asus-fan-control from /etc/rc.local
if grep -q '^asus-fan-control$' /etc/rc.local 2> /dev/null; then
    sed -ie '/^asus-fan-control$/d' /etc/rc.local
fi

# run asus-fan-control after boot
systemctl enable asus-fan-control.service

# try to apply changes immediately
{ asus-fan-control; true; } # not a problem if it fails
